@model HospitalStaffManagement.Models.Symptoms

@{
    ViewBag.Title = "Edit";
}

@using ((Html.BeginForm("Edit",
                        "Symptoms",
                        FormMethod.Post, new { enctype = "multipart/form-data" })))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="text-center text-blue" style="border-style:solid;">
                    <h2>ویرایش علائم بیماری</h2>
                </div>
                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <input class="form-control" id="Name" name="Name" style="width:50%" value="@Model.Name" />

                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group" style="margin-left:90%;">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="ثبت" class="btn btn-success" style="margin-bottom:5px;" />
                        </div>
                        <p class="text-danger" style="margin-right:20px;">
                            @TempData["Error"]
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<div>
    <a class="btn btn-warning" href="/Symptoms/Index"> بازگشت</a>
</div>
