@model HospitalStaffManagement.Models.Patients

@{
    ViewBag.Title = "Create";
}

@using ((Html.BeginForm("Create",
                        "Patients",
                        FormMethod.Post, new { enctype = "multipart/form-data" })))
{
    @Html.AntiForgeryToken()

    <div class="row">
        <div class="col-xs-12">
            <div class="box">

                <div class="text-center text-blue" style="border-style:solid;">
                    <h2>ثبت بیمار</h2>
                </div>
                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @style = "width:50%" } })
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control", @style = "width:50%" } })
                            @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.Mobile, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Mobile, new { htmlAttributes = new { @class = "form-control", @style = "width:50%" } })
                            @Html.ValidationMessageFor(model => model.Mobile, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", @style = "width:50%" } })
                            @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.DiseaseRecords, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.DiseaseRecords, new { htmlAttributes = new { @class = "form-control", @style = "width:50%" } })
                            @Html.ValidationMessageFor(model => model.DiseaseRecords, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.DossierSickness, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.DossierSickness, new { htmlAttributes = new { @class = "form-control", @style = "width:50%" } })
                            @Html.ValidationMessageFor(model => model.DossierSickness, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.PrescribedDrugs, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.PrescribedDrugs, new { htmlAttributes = new { @class = "form-control", @style = "width:50%" } })
                            @Html.ValidationMessageFor(model => model.PrescribedDrugs, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(model => model.old, htmlAttributes: new { @class = "control-label col-md-2" })
                        <div class="col-md-10">
                            <input class="form-control" name="old" id="old" style="width:50%" placeholder="سن بیمار را وارد کنید" />

                            @Html.ValidationMessageFor(model => model.old, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-2">
                            جنسیت
                        </label>
                        <div class="col-md-10">
                            <select style="width:50%" class="form-control" name="Gender" id="Gender">
                                <option value="0">آقا</option>
                                <option value="1">خانم</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">
                            وضعیت عمومی
                        </label>
                        <div class="col-md-10">
                            <select style="width:50%" class="form-control" name="State" id="State">
                                <option value="0">وخیم</option>
                                <option value="1">تحت کنترل</option>
                                <option value="2">بهبود یافته</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group" style="margin-right:1px;">
                        @Html.LabelFor(model => model.Url, htmlAttributes: new { @class = "control-label col-md-2" })

                        <input style="width:600px;margin-right:50px" name="Main_Image" type="file" class="form-control" id="Main_Image_Upload" onchange="setImage()">
                        <br />
                        <img alt="تصویری انتخاب نشده" id="Main_Image_Show" style="width:170px;height:150px;margin-right:50px" src="" />
                    </div>
                    <div class="form-group" style="margin-left:90%;">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="ثبت" class="btn btn-success" style="margin-bottom:5px;" />
                        </div>
                        <p class="text-danger" style="margin-right:20px;">
                            @ViewData["Error"]
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<div>
    <a class="btn btn-warning" href="../Patients/Index"> بازگشت</a>
</div>
<script>
    function setImage() {
        var myURL = window.URL || window.webkitURL;
        var fileURL = myURL.createObjectURL(Main_Image_Upload.files[0]);
        Main_Image_Show.src = fileURL;
	}

</script>